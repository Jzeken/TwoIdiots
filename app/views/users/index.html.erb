<h1>All Users</h1>
<%= will_paginate %>
<% @users.each do |user| %>
	<ul>
		<li><%= link_to user.username, user_path(user) %></li>
		<li><small><% pluralize(user.articles.count, "article") if user.articles %></small></li>
		<% if logged_in? && current_user.admin? %>
			<li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all the their articles?"} %></li>
		<% end %>
	</ul>
<% end %>
<%= will_paginate %>